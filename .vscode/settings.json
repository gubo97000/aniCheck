{
    "typescript.tsserver.experimental.enableProjectDiagnostics": true,
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "explicit"
    },
    "eslint.rules.customizations": [
        { // AutoFixed anyway
            "rule": "prettier/prettier",
            "severity": "off"
        },
        { // VSCode already show unused vars
            "rule": "@typescript-eslint/no-unused-vars",
            "severity": "off"
        },
        {
            "rule": "node/no-unpublished-import",
            "severity": "off"
        }
    ],
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#34baff",
        "activityBar.background": "#34baff",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#df0093",
        "activityBarBadge.foreground": "#e7e7e7",
        "sash.hoverBorder": "#34baff"
    },
    "peacock.color": "#01A9FF"
}